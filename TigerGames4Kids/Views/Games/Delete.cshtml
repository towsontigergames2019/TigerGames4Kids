@model TigerGames4Kids.Models.GameType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="margin: 5px 0 5px 0 ;">You're about to delete a game</h1>
    <div class="jumbotron text-center" style="margin:15px auto 15px auto;">
        

        @using (Html.BeginForm("DeleteGame", "Games"))
        {
            @Html.AntiForgeryToken()
            <h5 class="lead text-info">Are you sure you want to continue with this operation?</h5>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group text-center">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBoxFor(m => m.Title, new {  style = "display: none;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" class="btn btn-secondary" value="Delete Game" />
                    <a href="/Games/AllGames" class="btn btn-warning" style="display:inline-block; margin: 2px auto 8px auto;">Go back to Games</a>

                    <div id="error-message"></div>
                </div>
            </div>
    }
</div>
